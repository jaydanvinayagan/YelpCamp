<% include ../partials/header %>

    
    <div class = "container">
        <header class = "jumbotron">
            <div class ="container">
                
                 <h1>Welcome To YelpCamp!</h1>
                 
                <p>View our campgrounds from all over the world.</p>
                
                <p>
                    <a class = "btn btn-primary btn-large" href = "/campgrounds/new">Add New Campground</a>
                </p>
                <p>
                    <form action = "/campgrounds" method = "GET">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control"  name = "search" placeholder="Search for a campground...">
                        </div>
                    </form>
                </p>
                
            </div>
           
        </header>
        
        <div class="row text-center">
            <% if(noMatch !== null) { %>
                    <h3><%= noMatch %></h3>
                
            <% } %>
            <% campgrounds.forEach(function(campground){ %>
                <div class = "col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card">
                        <img class="card-img-top" src="<%=campground.image%>" alt="<%= campground.name %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= campground.name %></h5>
                           
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
   
    
<% include ../partials/footer %>


